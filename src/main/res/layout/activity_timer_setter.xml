<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp"
    android:background="@drawable/list_selector"
    tools:context="raspi.alphabetagamma.login.TimerSetter">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="20sp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/textView2"
            android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/textView2" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="225dp"
            tools:layout_editor_absoluteY="225dp"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/editstart2"
            android:layout_width="65dp"
            android:layout_height="0dp"
            android:ems="10"
            android:inputType="time"
            android:gravity="center"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="38dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
            tools:layout_constraintBaseline_creator="1" />

        <EditText
            android:id="@+id/editend2"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:ems="10"
            android:inputType="time"
            android:gravity="center"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/editstart2"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/editstart2"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/editstart2" />

        <Button
            android:id="@+id/starttimer"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/checkstatus"
            android:text="Set Start Time"
            app:layout_constraintRight_toLeftOf="@+id/editstart1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/editstart1"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/endtimer"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Set End Time"
            android:background="@drawable/checkstatus"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/starttimer"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/starttimer"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/starttimer" />

        <EditText
            android:id="@+id/editstart1"
            android:layout_width="65dp"
            android:layout_height="0dp"
            android:ems="10"
            android:inputType="time"
            android:gravity="center"
            app:layout_constraintRight_toLeftOf="@+id/textView2"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="15dp"
            tools:layout_constraintBaseline_creator="1"
            android:layout_marginRight="15dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView2" />

        <EditText
            android:id="@+id/editend1"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:ems="10"
            android:inputType="time"
            tools:layout_constraintTop_creator="1"
            android:gravity="center"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/editstart1"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/editstart1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/editstart1" />

        <Button
            android:id="@+id/savetimer"
            android:layout_width="90dp"
            android:background="@drawable/listbutton"
            android:layout_height="50dp"
            android:text="Save"
            android:layout_marginStart="63dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/cleartimer"
            tools:layout_constraintBaseline_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="63dp" />

        <Button
            android:id="@+id/cleartimer"
            android:layout_width="90dp"
            android:background="@drawable/listbutton"
            android:layout_height="50dp"
            android:text="Reset"
            android:layout_marginEnd="71dp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="54dp"
            app:layout_constraintLeft_toRightOf="@+id/savetimer"
            app:layout_constraintHorizontal_bias="0.982" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            app:layout_constraintGuide_begin="20dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="20dp" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            app:layout_constraintGuide_begin="566dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="566dp"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="20sp"
            app:layout_constraintRight_toLeftOf="@+id/editstart2"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="91dp"
            app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
